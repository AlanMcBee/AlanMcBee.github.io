{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://alanmcbee.github.io/SoftwareStore-2020-20-26T12-56.schema.json",
    "title": "SoftwareStore: AlanM's software list",
    "description": "The SoftwareStore is the file that tracks all of the software that I might like to put on my system",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": { "type": "string" },
        "store": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "package"
                ],
                "additionalProperties": false,
                "properties": {
                    "package": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "name": { "type": "string" },
                            "sku": { "type": "string" },
                            
                            "class": {
                                "type": "string",
                                "enum": [ "unknown", "IDE", "Install", "Module", "SDK", "Security", "Shell", "Storage", "Tool", "UserAgent" ]
                            },
                            "source": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "anyOf": [
                                        {
                                            "$ref": "#/definitions/script"
                                        }
                                    ]
                                }
                            },
                            "description": { "type": "string" },
                            "sourceCodeUrl": { "type": "string" },
                            "documentation": {
                                "type": "object",
                                "properties": {
                                    "url": { "type": "string" }
                                }
                            },
                            "platform": {
                                "type": "string"
                            },
                            "keywords": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "defaultSnippets": [
                    {
                        "label": "New package",
                        "description": "Creates a new software package entry",
                        "body": {
                            "package": {
                                "name": "${1:human-name-for-software-package}",
                                "sourceUrl": "${2:url-to-downloadable-assets}",
                                "description": "${3:optional-one-sentence}",
                                "sourceCodeUrl": "${4:optional-url-to-source-code}"
                            }
                        }
                    }
                ]
            }
        }
    },
    "definitions": {
        "script": {
            "type": "object"
        }
    }
}